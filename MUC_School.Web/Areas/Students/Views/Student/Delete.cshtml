@model Student

<div class=" border p-3">
	<form asp-controller="Student" asp-action="DeleteConfirm" method="post">
		<input asp-for="Id" hidden/>
	
		<div class="row  p-3">
			<h2 class="text-center">Confirm Your Delete</h2>
		</div>

		<div class="mt-3">
			<hr />
			<span asp-validation-for="Name" class="text-black">Serial Number</span>
			<input asp-for="Name" class="form-control"/>
		</div>

		<div class="mt-3">
			<span asp-validation-for="Age" class="text-black">Age</span>
			<input asp-for="Age" class="form-control" />
		</div>

		<div class="mt-3">
			<span asp-validation-for="ClassNameId" class="text-black">RolL Number</span>
			<input asp-for="ClassName.Standard" class="form-control" />
		</div>

		<div class="mt-3">
			<span asp-validation-for="Rollnumber" class="text-black">RolL Number</span>
			<input asp-for="ClassName.Division" class="form-control" />
		</div>

		<div class="mt-3">
			<span asp-validation-for="Teacher" class="text-black">RolL Number</span>
			<input asp-for="Teacher.TeacherName" class="form-control" />
		</div>

		<div class="mt-3">
			<span asp-validation-for="ImageUrl" class="text-black">Select Image</span>
			<img src="@Model.ImageUrl" height="100" width="100" />

		</div>

		<div class="row mt-4">
			<div class="col-4">
				<input type="submit" class="btn btn-success form-control" value="Delete" />
			</div>
			<div class="col-4">
				<a asp-controller="Student" asp-action="ListOfStudent" class="btn btn-warning form-control">StudentList</a>
			</div>
			<div class="col-4">
				<a asp-controller="Student" asp-action="StudentForm" class="btn btn-info form-control">Add Student</a>
			</div>
		</div>
	</form>

</div>